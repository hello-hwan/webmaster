<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

	<!-- mybatis propertis 에서 리소스 가져옴 -->
	<properties resource="config/db.propertise" />

	<settings>
		<setting name="mapUnderscoreToCamelCase" value="true" />
		<setting name="jdbcTypeForNull" value="NULL" /> <!-- my batis 세팅에서 가져옴 -->
	</settings>

	<!-- mybatis typeAlias에서 대충 아무거나 가져옴 -->
	<typeAliases>
		<typeAlias alias="member" type="com.yedam.vo.MemberVO" />
		<typeAlias alias="board" type="com.yedam.vo.BoardVO" />
		<typeAlias alias="reply" type="com.yedam.vo.ReplyVO" />
	</typeAliases>

	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">

				<!-- db.properties에서 값 가져오기 -->
				<property name="driver" value="${driver}" />
				<property name="url" value="${url}" />
				<property name="username" value="${username}" />
				<property name="password" value="${password}" />
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<mapper resource="com/yedam/mapper/MemberMapper.xml" />
		<mapper resource="com/yedam/mapper/BoardMapper.xml" />
		<mapper resource="com/yedam/mapper/ReplyMapper.xml" />
	</mappers>
</configuration>
